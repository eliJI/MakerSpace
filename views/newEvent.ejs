<%- include('./partials/header.ejs') %>  
    <main id = "new-event-content">
        <div id = "form-container">
            <form id = "event-form" method="POST" enctype="multipart/form-data" action="/events">
                <div class = "inline-label-container">
                    <label for="category">Category</label>
                    <select id = "category" name="category" required>
                        <option value="">-Select a Category-</option>
                        <option value="workshops">Workshop</option>
                        <option value="seminars">Seminar</option>
                        <option value="meet and greet">Meet and Greet</option>
                        <option value="convention">Convention</option>
                        <option value="other">Other</option>
                    </select> 
                </div>
                <div class = "inline-label-container">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required placeholder="title of event..."> 
                </div>
                <div class = "inline-label-container">
                    <label for="host">Host</label>
                    <input type="text" id="host" name="host" required placeholder="event host..."> 
                </div>
                <div class = "inline-label-container">
                    <label for="location">Where</label>
                    <input type="text" id="location" name="location" required placeholder="event location..."> 
                </div>
                <div class = "inline-label-container">
                    <label for="content">Details</label>
                    <textarea id = "content" name="content" required placeholder="event details..."></textarea> 
                </div>
                <div class = "inline-label-container">
                    <label for="dateStart">Start Time</label>
                    <input type = "datetime-local" id = "dateStart" name="dateStart" required>
                </div>
                <div class = "inline-label-container">
                    <label for="dateEnd">End Time</label>
                    <input type = "datetime-local" id = "dateEnd" name="dateEnd" required>
                </div>
                <div class = "inline-label-container">
                    <label for="image" accept=".png">Image</label>
                    <input type = "file" id = "image" name="image" accept="image/png,image/jpeg" required>
                </div>
                <div class = "inline-label-container">
                    <input type = "submit">
                </div>
        
            </form>      
        </div>
    </main>
    <%- include('./partials/footer.ejs') %>  
