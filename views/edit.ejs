<%- include('./partials/header.ejs') %>  
    <main id = "new-event-content">
        <div id = "form-container">
            <form id = "event-form" method="POST" enctype="multipart/form-data" action="/events/<%= event._id %>?_method=PUT">
                <div class = "inline-label-container">
                    <label for="category">Category</label>
                    <select id = "category" name="category" required>
                        <option value="">-Select a Category-</option>

                        <%if (event.category === 'workshops') {%>
                            <option value="workshops" selected>Workshop</option>
                        <%} else { %>
                            <option value="workshops">Workshop</option>
                        <%}%>

                        <%if (event.category === 'seminars') {%>
                            <option value="seminars" selected>Seminar</option>
                        <%} else { %>
                            <option value="seminars">Seminar</option>
                        <%}%>

                        <%if (event.category === 'meet and greet') {%>
                            <option value="meet and greet" selected>Meet and Greet</option>
                        <%} else { %>
                            <option value="meet and greet">Meet and Greet</option>
                        <%}%>

                        <%if (event.category === 'other') {%>
                            <option value="other" selected>Other</option>
                        <%} else { %>
                            <option value="other">Other</option>
                        <%}%>

                        <%if (event.category === 'convention') {%>
                            <option value="convention" selected>Convention</option>
                        <%} else { %>
                            <option value="convention">Convention</option>
                        <%}%>
                    </select> 
                </div>
                <div class = "inline-label-container">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" value="<%= event.title %>" required placeholder="title of event..."> 
                </div>
                <div class = "inline-label-container">
                    <label for="host">Host</label>
                    <input type="text" id="host" name="host" value="<%= event.host %>"  required placeholder="event host..."> 
                </div>
                <div class = "inline-label-container">
                    <label for="location">Where</label>
                    <input type="text" id="location" name="location" value="<%= event.location %>"  required placeholder="event location..."> 
                </div>
                <div class = "inline-label-container">
                    <label for="content">Details</label>
                    <textarea id = "content" name="content" required placeholder="event details..."><%= event.content %></textarea> 
                </div>
                
                <div class = "inline-label-container">
                    <label for="dateStart">Start Time</label>
                    <input type = "datetime-local" id = "dateStart" name="dateStart" value="<%= event.dateStart %>"  required>
                </div>
                <div class = "inline-label-container">
                    <label for="dateEnd">Endt Time</label>
                    <input type = "datetime-local" id = "dateEnd" name="dateEnd" value="<%= event.dateEnd %>"  required>
                </div>
                <div class = "inline-label-container">
                    <label for="image">Image</label>
                    <input type = "file" id = "image" name="image" accept="image/png,image/jpeg">
                </div>
                <div class = "inline-label-container">
                    <input type = "submit">
                </div>
        
            </form>      
        </div>
    </main>
    <%- include('./partials/footer.ejs') %>  
